# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts should always use LF
*.sh text eol=lf

# Windows scripts should always use CRLF
*.bat text eol=crlf
*.ps1 text eol=crlf

# JavaScript/Node files
*.js text eol=lf
*.json text eol=lf
*.md text eol=lf

# Config files
.env* text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# Binary files
*.mp3 binary
*.mp4 binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary

